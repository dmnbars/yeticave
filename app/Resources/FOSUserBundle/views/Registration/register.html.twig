{% extends "@FOSUser/layout.html.twig" %}

{% block title 'Регистрация' %}

{% form_theme form _self %}

{%- block form_row -%}
    <div class="form__item{{ not form.vars.valid ? ' form__item--invalid'}}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        <span class="form__error">{{- form_errors(form) -}}</span>
    </div>
{%- endblock form_row -%}

{% block fos_user_content %}
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form container' ~ (not form.vars.valid ? ' form--invalid')}}) }}
        <h2>Регистрация нового аккаунта</h2>

        {{ form_row(form.email, {'label': 'E-mail*', 'attr': {'placeholder': 'Введите e-mail'}}) }}
        {{ form_row(form.plainPassword.first, {'label': 'Пароль*', 'attr': {'placeholder': 'Введите пароль'}}) }}
        {{ form_row(form.plainPassword.second, {'label': 'Подтвердите пароль*', 'attr': {'placeholder': 'Подтвердите пароль'}}) }}
        {{ form_row(form.name, {'label': 'Имя*', 'attr': {'placeholder': 'Введите имя'}}) }}
        {{ form_row(form.contactDetails, {'label': 'Контактные данные*', 'attr': {'placeholder': 'Напишите как с Вами связаться', 'class': 'form__item--last'}}) }}
        <button type="submit" class="button">Зарегистрироваться</button>
        <a class="text-link" href="{{ path('fos_user_security_login') }}">Уже есть аккаунт</a>
    {{ form_end(form) }}
{% endblock fos_user_content %}
